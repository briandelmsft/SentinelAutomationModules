                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "STATCoordinatorPlaybookName": {
                        "value": "[parameters('STATCoordinatorPlaybookName')]"
                    },
                    "CustomConnectorName": {
                        "value": "[parameters('CustomConnectorName')]"
                    },
                    "CustomConnectorDisplayName": {
