        "BasicSampleTemplate": "[concat('https://raw.githubusercontent.com/briandelmsft/SentinelAutomationModules/', parameters('DeploymentBranch'), '/Samples/basicsample-statv1.json')]",
        "ConnectorTemplate": "[concat('https://raw.githubusercontent.com/briandelmsft/SentinelAutomationModules/', parameters('DeploymentBranch'), '/Connector/legacyconnector.json')]",
        "WorkbookTemplate": "[concat('https://raw.githubusercontent.com/briandelmsft/SentinelAutomationModules/', parameters('DeploymentBranch'), '/Workbook/azuredeploy.json')]"
    },
    "resources": [
        {
            "apiVersion": "2019-10-01",
            "name": "BaseTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[variables('BaseTemplate')]",
                    "contentVersion": "1.0.0.0"
