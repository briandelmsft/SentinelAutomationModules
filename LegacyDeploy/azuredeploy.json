                "[resourceId('Microsoft.Resources/deployments', 'RunPlaybookTemplate')]",
                "[resourceId('Microsoft.Resources/deployments', 'TITemplate')]"
            ],
            "properties": {
                "mode": "incremental",
                "templateLink": {
