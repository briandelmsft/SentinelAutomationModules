        },
        "MDEPlaybookName": {
            "defaultValue": "Get-MDEInsights",
            "type": "String"
        },
        "AADRisksPlaybookName": {
            "defaultValue": "Get-AADUserRisksInfo",
            "type": "String"
        },
        "TIPlaybookName": {
            "defaultValue": "Get-ThreatIntel",
            "type": "String"
        },
        "MCASPlaybookName": {
            "defaultValue": "Get-MCASInvestigationScore",
            "type": "String"
        },
        "BasicSamplePlaybookName": {
            "defaultValue": "Triage-Incident",
